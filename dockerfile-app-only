# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files first for caching
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies (including dev for tsx)
RUN npm install

# Copy the rest of the app
COPY . .

# Build Next.js app
RUN npm run build

# Stage 2: Production image
FROM node:20-alpine

WORKDIR /app

COPY --from=builder /app ./

# Expose port
EXPOSE 3000

# Start Next.js
CMD ["npm", "start"]
